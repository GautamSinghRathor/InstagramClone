<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Profile.AccountSettingActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- viewpager for fragments -->
        <include layout="@layout/layout_center_viewpager"/>

        <RelativeLayout
            android:id="@+id/relativeLayoutAccountSetting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- accountsetting toolbar -->
            <include layout="@layout/snippet_top_accountsetting_toolbar"/>


            <!-- mid Content -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="50dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Account Setting"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="10dp"
                    android:textSize="30sp"/>

                <ListView
                    android:id="@+id/lv_account_setting_listView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/white_grey_border_all_side"/>
            </LinearLayout>

        </RelativeLayout>
        <include layout="@layout/layout_bottom_navigation_view"/>

    </RelativeLayout>

</LinearLayout>