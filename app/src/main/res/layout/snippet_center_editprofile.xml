<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="50dp">

            <RelativeLayout
                android:id="@+id/relativeLayout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/profile_photo"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:src="@drawable/insta_logo"
                    android:layout_centerHorizontal="true"/>


                <TextView
                    android:id="@+id/tv_change_photo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Change Photo"
                    android:textSize="17sp"
                    android:textColor="@color/blue"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/profile_photo"/>


                <!--   Personal Section -->
                <TextView
                    android:id="@+id/tv_dum1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Personal Information"
                    android:textSize="25sp"
                    android:textColor="@color/grey"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/tv_change_photo"
                    android:layout_marginTop="20dp"/>


                <!-- Display Profile Name Section -->

                <!-- Display User Name Section -->
                <RelativeLayout
                    android:id="@+id/relativeLayout2"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/grey_border_bottom"
                    android:layout_below="@+id/tv_dum1">

                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:src="@drawable/ic_android_grey_24dp"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"/>


                    <EditText
                        android:id="@+id/et_username"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="User Name"
                        android:layout_marginStart="50dp"
                        android:background="@null"
                        android:layout_centerVertical="true"
                        android:inputType="textNoSuggestions"/>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/relativeLayout3"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/grey_border_bottom"
                    android:layout_below="@+id/relativeLayout2">

                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:src="@drawable/ic_account_circle_black_24dp"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"/>


                    <EditText
                        android:id="@+id/et_profile_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Profile Name"
                        android:layout_marginStart="50dp"
                        android:background="@null"
                        android:layout_centerVertical="true"
                        android:inputType="textNoSuggestions"/>

                </RelativeLayout>


                <!-- Display Website Section -->
                <RelativeLayout
                    android:id="@+id/relativeLayout4"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/grey_border_bottom"
                    android:layout_below="@+id/relativeLayout3">

                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:src="@drawable/ic_web_black_24dp"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"/>


                    <EditText
                        android:id="@+id/et_website"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="productiongsr.com"
                        android:layout_marginStart="50dp"
                        android:background="@null"
                        android:layout_centerVertical="true"
                        android:inputType="textNoSuggestions"/>

                </RelativeLayout>

                <!-- Display Discription Section -->
                <RelativeLayout
                    android:id="@+id/relativeLayout5"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/grey_border_bottom"
                    android:layout_below="@+id/relativeLayout4">

                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:src="@drawable/ic_assignment_black_24dp"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"/>


                    <EditText
                        android:id="@+id/et_discription"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Hello friend to insta!"
                        android:layout_marginStart="50dp"
                        android:background="@null"
                        android:layout_centerVertical="true"
                        android:inputType="textNoSuggestions"/>

                </RelativeLayout>




                <!--   Private Section -->
                <TextView
                    android:id="@+id/tv_dum2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Private Information"
                    android:textSize="25sp"
                    android:textColor="@color/grey"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/relativeLayout5"
                    android:layout_marginTop="20dp"/>


                <!-- Display Gmail Section -->
                <RelativeLayout
                    android:id="@+id/relativeLayout6"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/grey_border_bottom"
                    android:layout_below="@+id/tv_dum2">

                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:src="@drawable/ic_email_black_24dp"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"/>

                    <EditText
                        android:id="@+id/et_gmail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="50dp"
                        android:layout_marginBottom="0dp"
                        android:background="@null"
                        android:hint="gsrlv1999@gmail.com"
                        android:inputType="textNoSuggestions"
                        android:layout_centerVertical="true"/>


                </RelativeLayout>



                <!-- Display Phone Number Section -->
                <RelativeLayout
                    android:id="@+id/relativeLayout7"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/grey_border_bottom"
                    android:layout_below="@+id/relativeLayout6">

                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:src="@drawable/ic_local_phone_black_24dp"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"/>


                    <EditText
                        android:id="@+id/et_phone_number"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="9798234353"
                        android:layout_marginStart="50dp"
                        android:background="@null"
                        android:layout_centerVertical="true"
                        android:inputType="number"/>



                </RelativeLayout>


        </RelativeLayout>

    </ScrollView>

</merge>